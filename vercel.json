{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist" // Assumindo que o Vite/Build está gerando para 'client/dist'
      }
    },
    {
      "src": "server/index.ts", // Aponta para o ponto de entrada do seu backend
      "use": "@vercel/node" // Trata o backend como Serverless Function
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", // Todas as rotas /api/ vão para o seu backend
      "dest": "server/index.ts"
    },
    {
      "src": "/(.*)", // Todas as outras rotas vão para o frontend
      "dest": "client/dist/index.html"
    }
  ]
}
